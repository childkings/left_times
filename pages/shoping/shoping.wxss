/* pages/shoping/shoping.wxss */
.shop_item {
  display: flex;
  margin: 20rpx;
  padding: 15rpx;
  height: 150px;
  box-shadow: 1px 1px 10px rgb(221, 221, 221);
}
.shop_item image {
  width: 40%;
  height: 100%;
  margin-right: 15rpx;
}
.shop_item .message {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.shop_item .message .message_title {
  font-size: 30rpx;
  font-weight: 700;
}
.shop_item .message text:nth-child(n+2) {
  font-size: 22rpx;
}